<h1>注文履歴一覧</h1>
<table>
    <thead>
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
        </tr>
    </thead>
<% @orders.each do |order| %>
<tbody>
    <tr>
        <td>
            <%= order.created_at.strftime("%Y年 %m月 %d日") %>
        </td>
        <td>
           
            <%= order.address %>
        </td>
        <td>
            <!--each文作成する-->
            <% order.order_items.each do |order_item| %>
                 <%= order_item.item.name %>
            <% end %>
        </td>
        <td>
            <%= order.payment_amount %>
        </td>
        <td>
            <%= link_to "表示する", order_path(order.id) %>
        </td>
    </tr>
</tbody>
<% end %>
</table>

