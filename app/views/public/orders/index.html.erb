<h1>注文履歴一覧</h1>
<table>
    <thead>
        <tr>
            <th>注文日</th>
            <th>配送日</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
        </tr>
    </thead>
<% @orders.each do |order| %>
<tbody>
    <tr>
        <td>
            <%= @order.created_at %>
        </td>
        <td>
            <%= @order.address %>
        </td>
        <td>
            <%= @order.order_item %>
        </td>
        <td>
            <%= @order.payment_amount %>
        </td>
        <td>
            <%= link_to "表示する", admin_order_path %>
        </td>
    </tr>
</tbody>
<% end %>
</table>

