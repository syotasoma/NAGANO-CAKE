<h1>注文履歴詳細</h1>
<h2>注文履歴</h2>
<table>
  <tbody>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime("%Y年 %m月 %d日") %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td><%= @order.address %></td>
    </tr>
    <tr>
      <th>支払い方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
  </tbody>
</table>
<h2>注文内容</h2>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込み）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
    <% @order.order_items.each do |order| %>
    <tr>
      <td>
       <%= order.item.name %>
      </td>
      <td>
        <%= order.priceattimeofpurchase %>
      </td>
      <td>
        <%= order.amount %>
      </td>
      <td>
        <%= order.subtotal %>
      </td>
    </tr>
    <% @sum += order.subtotal %>
    <% end %>
  </thead>
</table>
<h2>請求情報</h2>
<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= @sum %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <th>ご請求金額</th>
      <td><%= @sum+@order.postage%></td>
    </tr>
  </tbody>
</table>